<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseBtnStyle">
        <item name="android:layout_margin">@dimen/ButtonMargin</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
        <item name="android:textColor">@color/colorBtnText</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="BtnStyle" parent="BaseBtnStyle">
        <item name="android:background">@drawable/btn_selector</item>
    </style>

    <style name="SymbolBtnStyle" parent="BaseBtnStyle">
        <item name="android:background">@drawable/symbol_btn_selector</item>
    </style>
</resources>
